<div id="possible_answer{{num}}_question{{count}}">
  <label for="answer{{num}}_question{{count}}">{{__ 'Accepted Answer:'}}</label>
  <input type="text" name="answer{{num}}_question{{count}}" value="{{value}}">
  {{#if value}}
  <input type="button" name="btn_answer{{num}}_question{{count}}" value="-" onclick="$('#possible_answer{{num}}_question{{count}}').remove();">
  {{else}}
  <input type="button" name="btn_answer{{num}}_question{{count}}" id="btn_add_answer{{num}}_question{{count}}" value="+"
  onclick="
    addAnswer('#content_question{{count}}', 'authoring');
    repurposeButton(this.id);
  ">
  {{/if}}
</div>
