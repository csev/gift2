<div class="possible-answer" id="possible_answer{{num}}_question{{count}}">
  <label for="answer{{num}}_question{{count}}">{{__ 'Option'}}:</label>
  <input type="text" class="answer-option form-control" name="answer{{num}}_question{{count}}" value="{{value}}">
  <label for="answer{{num}}_iscorrect_question{{count}}">{{__ 'Correct'}}?</label>
  <input type="checkbox" name="answer{{num}}_iscorrect_question{{count}}" {{#if isCorrect}}checked{{/if}}>
  {{#if value}}
  <input type="button" class="btn btn-default" name="btn_answer{{num}}_question{{count}}" value="-"
  onclick="
    $('#possible_answer{{num}}_question{{count}}').remove();
    renumber_answers({{count}});
  ">
  {{else}}
  <input type="button" class="btn btn-default" name="btn_answer{{num}}_question{{count}}" id="btn_add_answer{{num}}_question{{count}}" value="+"
  onclick="
    addAnswer('#content_question{{count}}', 'mc_authoring');
    repurposeButton(this.id);
  ">
  {{/if}}
</div>
